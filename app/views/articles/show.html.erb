<div class="new_blog m-3">
  <%= link_to 'go to mama' ,root_path ,class:'btn btn-success'%>
</div>
<h4 class="text-center mt-4">
  <%=@article.title%>
    <%= link_to gravatar_for(@article.user,size: 200),user_path(@article.user)%>
</h4>
<div class="container-fluid">
  <div class="card text-center shadow-lg bg-body rounded">
    <div class="card-header fst-italic">
      Featured On rail by <%=@article.user.username%>
    </div>
    <div class="card-body">
      <p class="card-text">
        <%= simple_format(@article.description) %>
      </p>
      <div class="d-flex justify-content-center gap-3">
        <%= link_to 'Edit' , edit_article_path(@article) ,class:'btn btn-primary'%>
          <%= button_to'Delete' ,article_path(@article),class:'btn btn-danger' , method: :delete%>
      </div>
    </div>
    <div class="card-footer text-muted">
      Posted <%= time_ago_in_words(@article.created_at)%>
    </div>

  </div>
</div>